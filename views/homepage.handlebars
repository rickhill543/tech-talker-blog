<div class="title-wrapper">
    <div class="title-container">
      <h1>Tech Talker Blog</h1>
    </div>
</div>

<ul class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post post-styles">
      <div class="title">
        <a href="/post/{{post.id}}" class="comment-link">{{post.title}}</a>
        <span>Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
      </div>
      <div class="text">
        {{post.post_text}}
      </div>
    </article>
  </li>
  {{/each}}
</ul>